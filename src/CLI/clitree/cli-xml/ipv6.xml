<VIEW name="enable-view">
    <COMMAND
        help="show IP commands"
        name="show ipv6"
        >
    <ACTION builtin="clish_nop"/>
    </COMMAND>

    <!-- show ip route -->
    <COMMAND
        help="IP route information"
        name="show ipv6 route">
        <PARAM
	         name="route-cmd"
	         help=""
	         mode="switch"
	         ptype="SUBCOMMAND"
	         optional="true">
             <PARAM
                help="IP route information per vrf"
                name="vrf"
                optional = "true"
                mode="subcommand"
                ptype="SUBCOMMAND">
	            <PARAM
                    help="VRF name"
                    name="vrfname"
                    ptype="STRING">
                    <PARAM
                        help="Destination prefix"
                        name="A::B/mask"
                        optional="true"
                        ptype="IPV6_ADDR_MASK">
                    </PARAM>
                </PARAM>
           </PARAM>
           <PARAM
                help="Destination prefix"
                optional="true"
                name="A::B/mask"
                ptype="IPV6_ADDR_MASK">
           </PARAM>
        </PARAM>
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-ip-route.py get_network_instance_afts_ipv6_unicast show_ip_route.j2 ${__full_line}&#xA;
        </ACTION>
    </COMMAND>
</VIEW>
</CLISH_MODULE>
