<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE CLISH_MODULE [
<!ENTITY START_PORT_ID "1">
<!ENTITY MAX_PORT_ID "32">
<!ENTITY START_SUB_PORT_ID "1">
<!ENTITY MAX_SUB_PORT_ID "4">
<!ENTITY MAX_MTU "9216">
]>
<CLISH_MODULE
    xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
    http://www.dellemc.com/sonic/XMLSchema/clish.xsd"
    >
    <VIEW name="enable-view">
        <COMMAND
            name="write"
            help="Write current ConfigDB to file on disk"
            >
            <PARAM
                name="memory"
                help="Write configDB to memory"
                ptype="SUBCOMMAND"
                mode="subcommand"
                >
            </PARAM>
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-cfg-mgmt.py rpc_sonic_config_mgmt_config_save 
        </ACTION>
        </COMMAND>
        <COMMAND
            name="copy"
            help="Perform file copy operation"
            ptype="SUBCOMMAND">
                <PARAM name="src-copy-options"
                       help="Copy source options"
                       ptype="SUBCOMMAND"
                       mode="switch">
                       <PARAM name="running-configuration"
                              help="Copy from running configuration"
                              mode="subcommand"
                              ptype="SUBCOMMAND">
                              <PARAM name="filepath"
                                     help="Copy to directory(file://filepath)"
                                     ptype="CONFIG_TYPE">
                              </PARAM>
                       </PARAM>
                       <PARAM name="copy_config_url"
                              help="Copy from directory(file://filepath)"
                              ptype="CONFIG_TYPE">
                              <PARAM name="running-configuration"
                                     help="Copy to running-configuration"
                                     mode="subcommand"
                                     ptype="SUBCOMMAND">
                                     <PARAM name="overwrite"
                                            help="Overwrite running-configuration and restart core services."
                                            optional="true" 
                                            mode="subcommand"
                                            ptype="SUBCOMMAND">
                                     </PARAM>
                              </PARAM>
                       </PARAM>
                       <PARAM name="startup-configuration"
                              help="Copy from startup-configuration"
                              mode="subcommand"
                              ptype="SUBCOMMAND">
                              <PARAM name="running-configuration"
                                     help="Copy to running-configuration"
                                     mode="subcommand"
                                     ptype="SUBCOMMAND">
                                     <PARAM name="overwrite"
                                            help="Overwrite running-configuration and restart core services."
                                            optional = "true" 
                                            mode="subcommand"
                                            ptype="SUBCOMMAND">
                                     </PARAM>
                              </PARAM>
                       </PARAM>
                </PARAM>             
                <ACTION>
                  if test "${src-copy-options}"  = "running-configuration";then
                      python $SONIC_CLI_ROOT/sonic-cli-cfg-mgmt.py rpc_sonic_config_mgmt_config_save ${filename}	
                  else
		     if test "${reload}" = "";then
                          python $SONIC_CLI_ROOT/sonic-cli-cfg-mgmt.py rpc_sonic_config_mgmt_config_load ${copy_config_url} 	
                      else 
                          python $SONIC_CLI_ROOT/sonic-cli-cfg-mgmt.py rpc_sonic_config_mgmt_config_reload ${filename} ${reload} ${load-sysinfo}	
                      fi 
                  fi   
                </ACTION>
          </COMMAND>                           
    </VIEW>
</CLISH_MODULE>

